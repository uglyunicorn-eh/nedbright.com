---
import type { CollectionEntry } from "astro:content";

import {
  FeaturedWritingPreview,
  TextWritingPreview,
} from "src/components/astro";

interface Props {
  writings: CollectionEntry<"writings">[];
}

const { writings } = Astro.props;

const [latest, ...rest] = writings;
---

<div class="relative z-40">
  <div
    class="container mx-auto mb-20 mt-20 flex flex-col gap-10 px-6 transition-all duration-100 lg:gap-28 xl:flex-row"
  >
    <div class="lg:max-w-[90ch]">
      <FeaturedWritingPreview writing={latest} />
    </div>
    <div class="flex flex-col gap-20 lg:pt-10">
      {rest.map((writing) => <TextWritingPreview writing={writing} />)}
    </div>
  </div>

  <div class="mb-20 flex justify-center">
    <a href={`/writings`} class="my-hero-button" data-astro-prefetch>
      Все статьи и публикации
    </a>
  </div>
</div>
